#include <stdlib.h>
#include <stdio.h>

int main()
{
char znak;

while(znak != 'q')
{
    printf("Podaj Operator: ");
    scanf("%c", &znak);

    if(znak==42)
    {
       funkcjaA();
    }
    else if(znak==43)
    {
       funkcjaB();
    }
    else if (znak==45)
    {
       funkcjaC();
    }
    else if(znak==47)
    {
        funkcjaD();
    }
}

return 0;
}
